{
  "manifest_version": 3,
  "name": "Kyber Browser Shield",
  "version": "1.1",
  "description": "Quantum-safe secure key exchange, encryption, messaging, and admin settings demo.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:4000/*",        
    "http://your-live-domain.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
